@page "/CardSelection"
@inject IPlayerService playerService
@inject NavigationManager navigationManager
@inject IDeckService deckService
@inject ILobbySetupService lobbySetupService

<PageTitle>Prepare for round</PageTitle>

<div class="page-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-10">
                <div class="cards-container d-flex flex-wrap justify-content-between">
                    @foreach(var card in TenCards)
                    {
                        <div class="card-item mt-4" style="width: 19%;" @onclick="async()=>await SwapCard(card)">
                            <img src="img/big/@(card.FileName)" alt="gwentCard" class="card-img">
                        </div>                        
                    }
                </div>
            </div>

            <div class="col-2">
                <div class="side-panel">
                    <h4>Podmień karty</h4>
                    <div style="font-size:24px;">Licznik: <span id="swap-count" style="font-size:24px;">@CardsSwapped/2</span></div>
                    <button disabled="@IsReady" class="btn btn-success ready-btn" @onclick="ReadyClicked">Gotowy</button>
                    @if (IsScoiatael && !IsReady)
                    {
                        <div class="col-12 mt-5">
                            <p style="font-size: 16px;" class="text-light mb-2">Używasz talii Scoiatael. Możesz wybrać kto rozpocznie grę.</p>
                            <button class="col-5 btn btn-outline-success">Zaczynaj</button>
                            <button class="col-5 offset-2 btn btn-outline-danger">Przeciwnik</button>
                            <p style="font-size:12px;" class="mt-1">Jezeli przeciwnik rowniez gra Scoiatael, kolejność zaczynania będzie losowa</p>
                        </div>
                    }
                    @if (IsReady)
                    {
                        <div style="font-size:24px;" class="mt-3">Oczekiwanie na przeciwnika</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<GwentCard> AllCards = [];
    private List<GwentCard> TenCards = [];
    private byte CardsSwapped = 0;

    private bool IsReady = false;
    private bool IsScoiatael = false;

    private async Task ReadyClicked()
    {
        IsReady = true;
        await deckService.SetReady();
        await lobbySetupService.CardsSelected();
    }

    private async Task SwapCard(GwentCard card)
    {
        if (CardsSwapped >= 2) return;
        if (IsReady) return;
        PlayerInfo playerInfo = await deckService.SwapCardInDeck(card.PrimaryId);

        CardsSwapped = playerInfo.CardsSwapped;
        AllCards = playerInfo.Cards;
        TenCards = playerInfo.Cards[..10];
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        if (!playerService.IsDataValid())
        {
            navigationManager.NavigateTo("/");
            return;
        }
        PlayerInfo playerInfo = await deckService.GetPlayerInfo();
        AllCards = playerInfo.Cards;
        TenCards = playerInfo.Cards[..10];
        IsScoiatael = playerInfo.Faction == CardFaction.Scoiatael;
    }

    protected override void OnInitialized()
    {
        if (!playerService.IsDataValid())
            navigationManager.NavigateTo("/");
    }
}
