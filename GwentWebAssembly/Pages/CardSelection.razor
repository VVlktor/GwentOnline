@page "/CardSelection"
@inject PlayerService playerService
@inject NavigationManager navigationManager
@inject IDeckService deckService

<div class="page-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-10">
                <div class="cards-container d-flex flex-wrap justify-content-between">
                    @foreach(var card in TenCards)
                    {
                        <div class="card-item mt-4" style="width: 18%;" @onclick="()=>SwapCard(card)">
                            <img src="" alt="Deyna" class="card-img">
                            <div class="card-content">
                                <div class="card-name">@card.Name</div>
                                <div class="card-description">@card.Description @card.Faction</div>
                                <div class="card-meta">
                                    @if (card.Placement != TroopPlacement.Special && card.Placement != TroopPlacement.Weather)
                                    {
                                        <label>Siła: @card.Strength | @card.Placement</label>
                                
                                        <br />
                                    }
                                    @if (card.Abilities != Abilities.None)
                                    {
                                        <label>Abilities: &nbsp</label>
                                        @foreach (Abilities ability in Enum.GetValues(typeof(Abilities)))
                                        {
                                            if (ability != Abilities.None && card.Abilities.HasFlag(ability))
                                            {
                                                <label>@ability, &nbsp</label>
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </div>                        
                    }
                </div>
            </div>

            <div class="col-2">
                <div class="side-panel">
                    <h4>Podmień karty</h4>
                    <div>Licznik: <span id="swap-count">@CardsSwapped/2</span></div>
                    <button disabled="@IsReady" class="btn btn-success ready-btn" @onclick="ReadyClicked">Gotowy</button>
                    @if (IsReady)
                    {
                        <div class="mt-3">Oczekiwanie na przeciwnika</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<GwentCard> AllCards = new();
    private List<GwentCard> TenCards = new();
    private byte CardsSwapped = 0;

    private bool IsReady = false;

    private async Task ReadyClicked()
    {
        IsReady = true;
        if(CardsSwapped!=0)
            await deckService.SwapDeck(AllCards);

        //oczekiwac na drugiego gracza. utworzyc gre a nie lobby
    }

    private void SwapCard(GwentCard card)
    {
        if (CardsSwapped >= 2) return;
        int index = TenCards.IndexOf(card);
        GwentCard holder = AllCards[10 + CardsSwapped];
        AllCards[10 + CardsSwapped] = card;
        TenCards[index] = holder;
        AllCards[index] = holder;
        CardsSwapped++;
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        PlayerInfo playerInfo = await deckService.GetPlayerInfo();
        AllCards = playerInfo.Cards;
        TenCards = playerInfo.Cards[..10];

    }

    protected override void OnInitialized()
    {
        if (!playerService.IsDataValid())
            navigationManager.NavigateTo("/");
    }
}
